name=gnome-bluetooth
version=3.28.0
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
        meson . build -D enable_docs=true --prefix=/usr --libdir=/usr/lib
        ninja -C build
        DESTDIR=$PKG ninja -C build install
}
