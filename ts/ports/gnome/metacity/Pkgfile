# Description: Fallback window manager for GNOME
# URL: 
# Maintainer: None
# Depends on: gtk libcanberra zenity

name=metacity
version=3.28.0
release=1
source=(ftp://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-shared \
		--disable-static

	make
	make install DESTDIR=$PKG
}
