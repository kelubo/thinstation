# Description: GNOME utilities
# URL: 
# Maintainer:
# Depends on:
# Group: gnome/desktop

name=libgtop
version=2.38.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr \
		--libexecdir=/usr/libexec \
		--disable-static \
		--enable-shared \

	make
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/info
}
