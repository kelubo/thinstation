# Description: GNOME Videos (aka Totem)
# URL: 
# Maintainer:
# Depends on:
# Group: gnome/desktop

name=totem
version=3.26.0
release=1
source=(http://ftp.gnome.org/pub/GNOME/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	cd $name-$version
        meson . build -D enable_docs=true --prefix=/usr --libdir=/usr/lib
        ninja -C build
        DESTDIR=$PKG ninja -C build install
}
