name=libass
version=0.13.2
release=1
source=(https://github.com/${name}/${name}/archive/${version}.tar.gz)

build() {
	cd $name-$version
        ./autogen.sh
        ./configure --prefix=/usr
        make DESTDIR=$PKG install
}

